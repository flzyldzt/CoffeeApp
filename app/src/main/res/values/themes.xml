<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CoffeeApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <!-- Splash Fragment iÃ§in tema -->
    <style name="Theme.CoffeeApp.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.CoffeeApp" parent="Base.Theme.CoffeeApp" />

    <style name="Custom_Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">@dimen/elevation_6dp</item>
    </style>

    <style name="Custom_TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/dark_gray</item>
        <item name="hintTextColor">@color/black</item>
        <item name="startIconTint">@color/app_main_color</item>
    </style>

    <style name="Custom_Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
     <style name="Custom_Layout_Actions_Button">
          <item name="android:background">@drawable/bg_linear_layout</item>
     </style>
</resources>