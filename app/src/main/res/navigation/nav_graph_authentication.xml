<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.app.coffeeapp.ui.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_authenticationMainFragment"
            app:destination="@id/authenticationMainFragment" />
    </fragment>

    <fragment
        android:id="@+id/authenticationMainFragment"
        android:name="com.app.coffeeapp.ui.authentication.authenticationmain.AuthenticationMainFragment"
        android:label="fragment_authentication_main"
        tools:layout="@layout/fragment_authentication_main">
        <action
            android:id="@+id/action_authenticationMainFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_authenticationMainFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.app.coffeeapp.ui.authentication.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_passwordFragment"
            app:destination="@id/passwordFragment" />

    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.app.coffeeapp.ui.authentication.signup.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" />
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.app.coffeeapp.ui.authentication.password.PasswordFragment"
        android:label="fragment_password"
        tools:layout="@layout/fragment_password" />

</navigation>